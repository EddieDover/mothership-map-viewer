  },
  "license": "MIT",
  "author": {
    "name": "Eddie Dover",
    "email": "ed@eddiedover.dev",
    "discord": "EddieDover",
    "flags": {}
  },
  "type": "module",
  "main": "src/scripts/mothership-map-viewer.js",
  "scripts": {
    "build": "node build.js",
    "package": "node build.js --package",
    "release": "commit-and-tag-version --sign",
    "release:dry": "commit-and-tag-version --dry-run",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:branch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage  --changedSince=master",
    "release:upcoming": "commit-and-tag-version --dry-run --silent > UPCOMING_CHANGELOG.md"
