    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2"
  },
  "commit-and-tag-version": {
    "skip": {
      "commit": true,
      "tag": true
    }
